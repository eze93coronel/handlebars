<main class="contenedor">  
<form action="/editar-perfil" method="POST"  class="default-form" enctype="multipart/form-data">
 <div class="campo">
         <label>Nombre</label>
        <input  type="text" value={{usuario.nombre}} name="nombre" placeholder=" Tu Nombre"   >
 </div>
 <div class="campo">
        <label>E-mail</label>
        <input type="email" value={{usuario.email}}  name="email" placeholder=" Tu Email"  >
 </div>
  <div class="campo">
       <label>Password</label>
       <input type="password" name="password" placeholder=" Tu Password" >
 </div>
 <div class="campo">
     <label>Imagen</label>
     <input type="file" name="imagen" placeholder="Tu imagen de Perfil">
     <img src="uploads/perfiles/{{usuario.imagen}}" class="admin-perfil">
 </div>
    <div class="campo">
        <input type="submit" class="btn btn-azul" value="Guardar Cambios" >
    </div>
</form>

</main>