 <main class="contenedor"> 
    <form action="/vacantes/editar/{{vacante.url}}" method="POST" class="default-form">
        <h3>Informacioan General</h3>
        <div class="campo"> 
            <label>Titulo</label>
            <input type="text" name="titulo"  value="{{vacante.titulo}}" placeholder="Ej: React Developer "  required>
        </div>
             <div class="campo"> 
            <label>Empresa</label>
            <input type="text" name="empresa"  value="{{vacante.empresa}}" placeholder="Empresa contrata " required>
        </div>
             <div class="campo"> 
            <label>Ubicasion</label>
            <input type="text" name="ubicasion"  value="{{vacante.ubicacion}}" placeholder="Ej: Argentina o Remoto " required>
        </div>
             <div class="campo"> 
            <label>Salario (USD)</label>
            <input type="text" name="salario"   value="{{vacante.salario}}"placeholder="Ej: $500" required>
        </div>
             <div class="campo"> 
            <label>Contrato</label>
            <select name="contrato">
                {{#tipoContrato vacante.contrato}}
               <option value="">-- Selecciona --</option>
               <option value="Frelance">Frelance</option>
               <option value="Tiempo Completo">Tiempo Completo</option>
               <option value="Medio Tiempo">Medio Tiempo</option>
               <option value="Por Proyecto">Por Proyecto</option>
             {{/tipoContrato}}
            </select>
        </div>
        <h3>Descripcion del Puesto</h3>
        <div class="campo descripcion">
         <label>Descripcion</label>
         <input type="hidden" id="x"  value="{{{vacante.descripcion}}}" name="descripcion">
         <trix-editor input="x"></trix-editor>
        </div>
        <h3>Conocimientos</h3>
         <ul class="lista-conocimientos activo"> 
                    {{#seleccionarSkills vacante.skills}}
                    {{/seleccionarSkills}}
         </ul>
         <div class="campo centrar-horizontal pt-10"> 
                <input type="hidden" name="skills" id="skills" >
                <input type="submit" value="Guardar Cambios" class="btn btn-azul">
        </div>
    </form>
 </main>